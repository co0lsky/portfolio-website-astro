<style>
  .about-hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .about-hero-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-text h1 {
    font-size: 3rem;
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .career-timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
  }

  .timeline-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--surface);
    border-radius: 0.5rem;
    border-left: 4px solid var(--accent-color);
  }

  .timeline-year {
    font-weight: 700;
    color: var(--accent-color);
    font-size: 1.1rem;
  }

  .timeline-role {
    font-weight: 600;
    color: var(--text-primary);
  }

  .philosophy-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .philosophy-principles {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .principle h4 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .principle p {
    margin-bottom: 0;
    font-size: 1rem;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .expertise-category h3 {
    margin-bottom: 2rem;
    color: var(--primary-color);
  }

  .skill-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skill-name {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.95rem;
  }

  .skill-bar {
    height: 8px;
    background-color: var(--border-light);
    border-radius: 4px;
    overflow: hidden;
  }

  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-color), #60a5fa);
    border-radius: 4px;
    transition: width 0.3s ease;
  }

  .experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .experience-item {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 2rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    border-left: 4px solid var(--accent-color);
  }

  .experience-company {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .experience-role {
    font-weight: 600;
    color: var(--accent-color);
    margin-bottom: 0.5rem;
  }

  .experience-period {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .experience-description p {
    margin-bottom: 1.5rem;
  }

  .experience-achievements {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .experience-achievements li {
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .experience-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .personal-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .personal-item h4 {
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .personal-item p {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .about-hero-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .about-text h1 {
      font-size: 2.25rem;
    }

    .philosophy-principles {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .expertise-grid {
      grid-template-columns: 1fr;
    }

    .experience-item {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .personal-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .timeline-item {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }
</style>
