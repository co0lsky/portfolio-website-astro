  <!-- Experience Highlights Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-8">Key Leadership Experiences</h2>
      <div class="experience-timeline">
        <div class="experience-item">
          <div class="experience-company">Mindvalley</div>
          <div class="experience-role">Engineering Manager</div>
          <div class="experience-period">2021 - May 2025</div>
          <div class="experience-description">
            <p>Led a team of 6 engineers building marketing infrastructure that powers 80% of company revenue. Built component-based systems enabling rapid marketing page deployment and flexible checkout solutions.</p>
